config BOARD
	default "twoli" if BOARD_TWOLI

if BOARD_TWOLI

config BT_CTLR
	default BT

config ZMK_KEYBOARD_NAME
    default "Twoli"

if ZMK_DISPLAY

choice ZMK_DISPLAY_STATUS_SCREEN
	default ZMK_DISPLAY_STATUS_SCREEN_CUSTOM

endchoice

config I2C
	default y

config SSD1306
	default y

config SSD1306_REVERSE_MODE
	default n

endif # ZMK_DISPLAY

endif # BOARD_TWOLI